{
	"name": "magic-post-frontend",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint .",
		"pre-commit": "lint-staged",
		"lint:fix": "eslint --format codeframe .",
