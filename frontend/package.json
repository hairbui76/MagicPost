		"@types/react": "^18",
		"@types/react-dom": "^18",
		"eslint": "^8",
		"eslint-config-next": "13.5.6",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"typescript": "^5"
	},
	"lint-staged": {
		"src/**": [
			"npm run prettier:fix",
			"npm run lint"
		]
